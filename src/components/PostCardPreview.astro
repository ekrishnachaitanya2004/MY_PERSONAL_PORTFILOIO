---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
import { withBase } from "../utils/helpers";

type Props = { post: CollectionEntry<"blogs"> };
const { post } = Astro.props;
const { title, pubDate, description } = post.data;
---

<a class="kanit-regular" href={withBase("/blog/" + post.id)}>
  <div class="flex flex-col gap-2">
    <div class="flex flex-col max-w-fit">
      <h2 class="sigmar-ff mb-1">{title}</h2>
      <FormattedDate date={new Date(pubDate)} />
      {
        description && (
          <p class="kanit-light text-base text-balance">{description}</p>
        )
      }
    </div>
  </div>
</a>
