<style>
  .projects-page {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .projects-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid;
    border-color: rgba(128, 128, 128, 0.3);
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .page-subtitle {
    font-size: 1.1rem;
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .projects-showcase {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .project-item {
    position: relative;
    padding: 2rem;
    border-radius: 1.5rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid transparent;
    background: rgba(255, 255, 255, 0.02);
  }

  html.light .project-item {
    background: rgba(0, 0, 0, 0.02);
  }

  .project-item:hover {
    transform: translateY(-8px);
    border-color: var(--color-space-red);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.05);
  }

  html.dark .project-item:hover {
    border-color: var(--color-space-yellow);
  }

  html.light .project-item:hover {
    background: rgba(0, 0, 0, 0.05);
    border-color: var(--color-space-red);
  }

  .project-number {
    position: absolute;
    top: -1.5rem;
    left: 2rem;
    font-family: "Sigmar", sans-serif;
    font-size: 6rem;
    line-height: 1;
    opacity: 0.15;
    z-index: 0;
    transition: all 0.4s ease;
    pointer-events: none;
  }

  .project-item:hover .project-number {
    opacity: 0.25;
    transform: scale(1.1);
  }

  .project-content {
    position: relative;
    z-index: 1;
  }

  .project-header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .project-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    line-height: 1.2;
    margin: 0;
  }

  .project-category {
    font-size: 0.85rem;
    font-family: "Kanit", sans-serif;
    font-weight: 500;
    color: var(--color-space-red);
    opacity: 0.8;
  }

  html.dark .project-category {
    color: var(--color-space-yellow);
  }

  .project-subtitle {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    opacity: 0.85;
    font-style: italic;
    font-family: "Comfortaa", sans-serif;
  }

  .project-description {
    font-size: 1.05rem;
    line-height: 1.8;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .project-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .project-tech-stack {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
  }

  .tech-label {
    font-size: 0.9rem;
    font-weight: 600;
    font-family: "Kanit", sans-serif;
    opacity: 0.8;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    padding: 0.4rem 0.9rem;
    border-radius: 1.5rem;
    background: rgba(128, 128, 128, 0.15);
    font-size: 0.85rem;
    font-family: "Kanit", sans-serif;
    font-weight: 500;
    border: 1px solid rgba(128, 128, 128, 0.25);
    transition: all 0.3s ease;
  }

  .project-item:hover .tech-tag {
    background: rgba(128, 128, 128, 0.2);
    border-color: rgba(128, 128, 128, 0.35);
  }

  .project-features-section {
    margin-top: 0.5rem;
  }

  .features-title {
    font-size: 1rem;
    font-weight: 600;
    font-family: "Kanit", sans-serif;
    margin-bottom: 1rem;
    color: var(--color-space-red);
  }

  html.dark .features-title {
    color: var(--color-space-yellow);
  }

  .project-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .project-features li {
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.7;
    font-size: 0.95rem;
    font-family: "Comfortaa", sans-serif;
    opacity: 0.9;
  }

  .project-features li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--color-space-red);
    font-weight: bold;
    transition: transform 0.2s ease;
  }

  html.dark .project-features li::before {
