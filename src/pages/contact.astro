<script>
  const form = document.getElementById('contact-form');
  const formMessage = document.getElementById('form-message');
  const submitBtn = form?.querySelector('.submit-btn');
  const submitBtnText = submitBtn?.querySelector('.submit-btn-text');
  const locationInput = document.getElementById('location');
  const getLocationBtn = document.getElementById('get-location-btn');
  const locationStatus = document.getElementById('location-status');
  const locationBtnText = getLocationBtn?.querySelector('.location-btn-text');

  // Geolocation handling
  getLocationBtn?.addEventListener('click', () => {
    if (!navigator.geolocation) {
      locationStatus.className = 'location-status error';
      locationStatus.textContent = 'Geolocation is not supported by your browser.';
      locationStatus.style.display = 'block';
      return;
    }

    // Show loading state
    if (getLocationBtn) {
      getLocationBtn.disabled = true;
      if (locationBtnText) {
        locationBtnText.textContent = 'Getting Location...';
      }
    }
    locationStatus.className = 'location-status loading';
    locationStatus.textContent = 'Requesting location permission...';
    locationStatus.style.display = 'block';

    navigator.geolocation.getCurrentPosition(
      (position) => {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        const locationValue = `${latitude.toFixed(6)}, ${longitude.toFixed(6)}`;
        
        // Fill the location input
        if (locationInput) {
          locationInput.value = locationValue;
        }

        // Show success message
        locationStatus.className = 'location-status success';
        locationStatus.textContent = `Location captured: ${locationValue}`;
        locationStatus.style.display = 'block';

        // Re-enable button
        if (getLocationBtn) {
          getLocationBtn.disabled = false;
          if (locationBtnText) {
            locationBtnText.textContent = 'Location Captured âœ“';
          }
          setTimeout(() => {
            if (locationBtnText) {
              locationBtnText.textContent = 'Get Location';
            }
          }, 2000);
        }
      },
      (error) => {
        // Handle errors
        locationStatus.className = 'location-status error';
        let errorMessage = 'Failed to get location. ';
        
        switch(error.code) {
          case error.PERMISSION_DENIED:
            errorMessage += 'Location access was denied. Please allow location access and try again.';
            break;
          case error.POSITION_UNAVAILABLE:
            errorMessage += 'Location information is unavailable.';
            break;
          case error.TIMEOUT:
            errorMessage += 'Location request timed out. Please try again.';
            break;
          default:
            errorMessage += 'An unknown error occurred.';
            break;
        }
        
        locationStatus.textContent = errorMessage;
        locationStatus.style.display = 'block';

        // Re-enable button
        if (getLocationBtn) {
          getLocationBtn.disabled = false;
          if (locationBtnText) {
            locationBtnText.textContent = 'Get Location';
          }
        }
      },
      {
        enableHighAccuracy: true,
        timeout: 10000,
        maximumAge: 0
      }
    );
  });

  // Validate location before form submission
  form?.addEventListener('submit', async (e) => {
    // Check if location is filled
    if (!locationInput?.value || locationInput.value.trim() === '') {
      e.preventDefault();
      locationStatus.className = 'location-status error';
      locationStatus.textContent = 'Please get your location before submitting the form.';
      locationStatus.style.display = 'block';
      locationInput?.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      return;
    }
    e.preventDefault();
    
    // Reset message
    formMessage.className = 'form-message';
    formMessage.style.display = 'none';
    
    // Disable submit button
    if (submitBtn) {
      submitBtn.disabled = true;
      if (submitBtnText) {
        submitBtnText.textContent = 'Sending...';
      }
    }

    // Get form data
    const formData = new FormData(form);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      github: formData.get('github'),
      phone: formData.get('phone'),
      location: formData.get('location'),
      message: formData.get('message') || '',
    };

    try {
      // TODO: Replace with your form submission endpoint
      // Options:
      // 1. Formspree: https://formspree.io/
      // 2. Netlify Forms: Add netlify attribute to form
      // 3. Your own API endpoint
      
      // Example with Formspree (uncomment and add your Formspree endpoint):
      // const response = await fetch('https://formspree.io/f/YOUR_FORM_ID', {
      //   method: 'POST',
      //   headers: {
      //     'Content-Type': 'application/json',
      //   },
      //   body: JSON.stringify(data),
      // });

      // For now, simulate API call
      await new Promise(resolve => setTimeout(resolve, 1000));

      // Show success message
      formMessage.className = 'form-message success';
      formMessage.textContent = 'Message sent successfully! I\'ll get back to you soon.';
      formMessage.style.display = 'block';

      // Reset form
      form.reset();

      // Scroll to message
      formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

    } catch (error) {
      // Show error message
      formMessage.className = 'form-message error';
      formMessage.textContent = 'Failed to send message. Please try again or contact me directly via email.';
      formMessage.style.display = 'block';

      // Scroll to message
      formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    } finally {
      // Re-enable submit button
      if (submitBtn) {
        submitBtn.disabled = false;
        if (submitBtnText) {
          submitBtnText.textContent = 'Send Message';
        }
      }
    }
  });
</script>

<style>
  .contact-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .contact-hero {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid;
    border-color: rgba(128, 128, 128, 0.3);
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-description {
    font-size: 1.1rem;
    line-height: 1.8;
    max-width: 700px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .contact-section {
    margin-bottom: 4rem;
    text-align: left;
  }

  .section-heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 2rem;
    text-align: center;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid;
    border-color: rgba(128, 128, 128, 0.2);
  }

  .form-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-form {
    padding: 2.5rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(128, 128, 128, 0.15);
    transition: all 0.3s ease;
  }

  html.light .contact-form {
    background: rgba(0, 0, 0, 0.02);
  }

  .contact-form:hover {
    border-color: rgba(128, 128, 128, 0.3);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: block;
    font-size: 0.95rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: currentColor;
    font-family: "Kanit", sans-serif;
  }

  .required {
    color: var(--color-space-red);
    font-weight: 700;
