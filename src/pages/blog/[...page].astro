---
import type { GetStaticPathsOptions, Page } from "astro";
import { type CollectionEntry, getCollection } from "astro:content";
import Pagination from "../../components/Pagination.astro";
import { sortItemsByDateDesc } from "../../utils/helpers";
import MainLayout from "../../layouts/MainLayout.astro";
import siteConfig from "../../site.config";
import PostCardPreview from "../../components/PostCardPreview.astro";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allBlogs = await getCollection("blogs");
  // Filter out draft posts
  const blogs = allBlogs
    .filter((blog) => !blog.data.draft)
    .sort(sortItemsByDateDesc);
  return paginate(blogs, { pageSize: siteConfig.postsPerPage || 2 });
}

type Props = { page: Page<CollectionEntry<"blogs">> };

const { page } = Astro.props;
const allPosts = page.data;

// Group posts by month and year
function groupPostsByMonth(posts: CollectionEntry<"blogs">[]) {
  const grouped: Record<string, CollectionEntry<"blogs">[]> = {};
  
  posts.forEach((post) => {
    const date = new Date(post.data.pubDate);
    const monthYear = date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
    });
    
    if (!grouped[monthYear]) {
      grouped[monthYear] = [];
    }
    grouped[monthYear].push(post);
  });
  
  // Sort posts within each group by date (newest first)
  Object.keys(grouped).forEach((month) => {
    grouped[month].sort((a, b) => {
      const dateA = new Date(a.data.pubDate);
      const dateB = new Date(b.data.pubDate);
      return dateB.getTime() - dateA.getTime();
    });
  });
  
  return grouped;
}

const groupedPosts = groupPostsByMonth(allPosts);
// Sort month groups by date (newest first)
// Get the first post from each group to determine the date
const sortedMonths = Object.keys(groupedPosts).sort((a, b) => {
  // Get the first post's date from each group (they're already sorted)
  const dateA = new Date(groupedPosts[a][0].data.pubDate);
  const dateB = new Date(groupedPosts[b][0].data.pubDate);
  return dateB.getTime() - dateA.getTime();
});
---

<MainLayout activePage="blog" pageTitle={siteConfig.title + " | Blog Archive"} showSubscribeForm={false}>
  <div class="blog-page">
    <div class="blog-header">
      <h1 class="sigmar-ff blog-title">BLOG</h1>
      <p class="comfortaa-regular blog-description">
        Technical experiments, cybersecurity insights, and things I've learned while building. 
        Not tutorials. Not motivation. Just real notes from figuring stuff out.
      </p>
    </div>

    <div class="blog-content">
      {sortedMonths.map((monthYear) => (
        <div class="blog-month-section">
          <h2 class="sigmar-ff month-heading">{monthYear}</h2>
          <div class="posts-list">
            {groupedPosts[monthYear].map((post) => (
              <PostCardPreview post={post} />
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="pagination-wrapper">
      <Pagination page={page} />
    </div>
  </div>
</MainLayout>

<style>
  .blog-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid;
    border-color: rgba(128, 128, 128, 0.3);
  }

  .blog-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: 0.02em;
  }

  .blog-description {
    font-size: 1.05rem;
    line-height: 1.8;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .blog-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .blog-month-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .month-heading {
    font-size: clamp(1.5rem, 3vw, 2rem);
    padding-bottom: 0.75rem;
    border-bottom: 1px solid;
    border-color: rgba(128, 128, 128, 0.2);
    text-align: left;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-left: 0;
  }

  .pagination-wrapper {
    margin-top: 4rem;
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .blog-page {
      padding: 1.5rem 1rem;
    }

    .blog-header {
      margin-bottom: 3rem;
      padding-bottom: 1.5rem;
    }

    .blog-description {
      font-size: 1rem;
    }

    .blog-content {
      gap: 2.5rem;
    }

    .posts-list {
      gap: 1.5rem;
    }

    .month-heading {
      font-size: 1.5rem;
    }
  }
</style>
